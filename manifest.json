{
	"manifest_version": 2,

	"name": "BlackList for YouTube",
	"description": "Adds blacklist functionality to YouTube website.",
	"version": "0.1.4",

	"page_action": {
		"default_icon": "images/middle_finger_19.png",
		"default_title": "BlackList for YouTube",
		"default_popup": "popup/popup.html"
	},
	
	"background": {
		"scripts" : [ "background/background.js" ]
	},

	"content_scripts": [
		{
			"matches": [ "*://www.youtube.com/watch?v=*" ],
			"js": [ "content_scripts/youtube.js" ],
			"css": [ "content_scripts/youtube.css" ],
			"run_at": "document_end"
		}
	],

	"options_ui": {
    	"page": "options/options.html",
    	"chrome_style": true
  	},

	"icons": {
		"16": "images/middle_finger_16.png",
		"48": "images/middle_finger_48.png",
		"128": "images/middle_finger_128.png"
	},

	"permissions" : [
		"tabs",
		"webNavigation",
		"contextMenus",
		"*://www.youtube.com/*"
	]
}
