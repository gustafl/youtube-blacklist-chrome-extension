{
	"manifest_version": 2,

	"name": "BlackList for YouTube",
	"description": "Adds blacklist functionality to YouTube website.",
	"version": "0.1.1",

	"page_action": {
		"default_icon": "icon.png",
		"default_title": "BlackList for YouTube",
		"default_popup": "popup.html"
	},
	
	"background": {
		"scripts" : [ "eventPage.js" ],
		"persistent" : false
	},

	"content_scripts": [
		{
			"matches": [ "https://www.youtube.com/*", "http://www.aktietorget.se/*" ],
			"js": [ "youtube.js" ],
			"css": [ "youtube.css" ]
		}
	],

	"options_ui": {
    	"page": "options.html",
    	"chrome_style": true
  	},

	"permissions" : [
		"tabs",
		"https://www.youtube.com/*",
		"http://www.aktietorget.se/*"
	]
}
