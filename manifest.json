{
	"manifest_version": 2,

	"name": "BlackList for YouTube",
	"description": "Blacklist dumb people on YouTube.",
	"version": "0.3.0",

	"page_action": {
		"default_icon": "images/hidden.png",
		"default_title": "BlackList for YouTube",
		"default_popup": "popup/popup.html"
	},
	
	"background": {
		"scripts" : [
			"background/background.js"
		]
	},

	"content_scripts": [
		{
			"matches": [ "*://www.youtube.com/*" ],
			"js": [ "content_scripts/youtube.js" ],
			"css": [ "content_scripts/youtube.css" ],
			"run_at": "document_end"
		}
	],

	"options_ui": {
    	"page": "options/options.html",
    	"chrome_style": true
  	},

	"icons": {
		"16": "images/hidden.png",
		"48": "images/hidden.png",
		"128": "images/hidden.png"
	},

	"web_accessible_resources": [
		"images/*.png"
	],

	"permissions" : [
		"contextMenus",
		"notifications",
		"storage",
		"tabs",
		"webRequest",
		"*://www.youtube.com/*"
	]
}
